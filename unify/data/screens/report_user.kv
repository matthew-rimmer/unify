ReportUser:
	reason1: reason1
	reason2: reason2
	reason3: reason3
	reason4: reason4

	BoxLayout:
		orientation: 'vertical'
		padding: dp(20)
		spacing: dp(10)

		Label:
			text: "Please select your reason \n for reporting this user:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		# Four choices total
		CheckBox:
			id: reason1
			active: False
			color: 0,0,0,1
		Label:
			text: "1) Objectionable content in profile"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		CheckBox:
			id: reason2
			active: False
			color: 0,0,0,1
		Label:
			text: "2) Bullying and harrassment \n through social media"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		CheckBox:
			id: reason3
			active: False
			color: 0,0,0,1
		Label:
			text: "3) Fake profile - student does not exist"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		Label:
			text: "4) Other"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
		TextInput:
			id: reason4
			multiline:True
			size_hint: (1, None)
			height: dp(70)


		# Submit report
		RoundedButton:
			text: "Submit"
			pos_hint: {"center_x": 0.5}
			size_hint: 0.5, 0.7
			on_release: root.save_user_report()
			on_release: app.go_screen(5)
