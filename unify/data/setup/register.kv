<Register>
	first_name: first_name
	last_name: last_name
	dob: dob
	uni_email: uni_email
	password: password

	FloatLayout:
		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8BFD8")
			Rectangle:
				size: self.size
				pos: self.pos

		# Request data from user to save to the database (First Name, Surname, Uni Email + Password)
		GridLayout:
			cols: 2
			padding: dp(20)
			spacing: dp(20)
			size_hint: 1, 0.55
			pos_hint: {"top": 0.7}

			# First name field
			Label:
				text: "First name:"
				color: 0,0,0,1
			TextInput:
				id: first_name
				multiline: False


			# Last name field
			Label:
				text: "Last name:"
				color: 0,0,0,1
			TextInput:
				id: last_name
				multiline: False


			# Date of birth field
			Label:
				text: "Date of Birth \n (YYYY-MM-DD):"
				halign: 'center'
				color: 0,0,0,1
			TextInput:
				id: dob
				multiline: False


			# Uni Email field
			Label:
				text: "University \n email address:"
				halign: 'center'
				color: 0,0,0,1
			TextInput:
				id: uni_email
				multiline: False


			# Password field
			Label:
				text: "Password:"
				color: 0,0,0,1
			TextInput:
				id: password
				password: True
				multiline: False


			RoundedButton:
				text: "Cancel"
				on_release:
					app.root.current = "initial_screen"
					root.manager.transition.direction = 'right'


			RoundedButton:
				text: "Register"
				on_release: root.save_user()
				on_release:
					app.root.current = "account_verification"
					root.manager.transition.direction = 'left'
