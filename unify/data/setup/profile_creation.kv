<ProfileCreation>:
	GridLayout:
		cols: 1
		padding: dp(15)
		spacing: dp(15)

		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8BFD8")
			Rectangle:
				size: self.size
				pos: self.pos

		Label:
			text: "Create Your Profile"
			font_size: 20
			bold: True
			text_size: self.size
			halign: "left"
			size_hint_y: None
			height: dp(20)


		# Upload pictures - save image url
		Label:
			text: "Choose your 3 photos:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
			size_hint_y: None
			height: dp(20)

		GridLayout:
			cols: 1
			canvas.before:
				Color:
					rgb: 0.6, 0.5, 0.6
				Rectangle:
					pos: self.pos
					size: self.size

			FileChooserIconView:
				size_hint_x: 1
				size_hint_y: None
				height: dp(200)
				on_selection: root.select(*args)

		ScrollView:
			bar_width: dp(5)

			GridLayout:
				cols: 1
				size_hint_x: 1
				size_hint_y: None
				height: self.minimum_height
				padding: dp(15)
				spacing: dp(15)

				# Fill in 'About Me' section
				Label:
					text: "What should be in your 'About Me'?"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: description
					multiline: True
					size_hint_y: None
					height: dp(80)


				# Interest tags
				Label:
					text: "University course & interests?"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: interest_tags
					multiline: True
					size_hint_y: None
					height: dp(80)


				# Link Instagram
				Label:
					text: "Connect your Instagram:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)


				# Link Spotify
				Label:
					text: "Connect your Spotify:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)


				# Link Twitter
				Label:
					text: "Connect your Twitter:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)


				# Provide LinkedIn URL
				Label:
					text: "LinkedIn URL:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: linked_in
					multiline: False
					size_hint_y: None
					height: dp(30)


				RoundedButton:
					id: profileCreate
					text: "Create Profile"
					size_hint_y: None
					height: dp(25)
					on_release:
						app.root.current = "main"
						root.manager.transition.direction = 'left'
