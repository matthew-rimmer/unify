<EventRow>:
	orientation: 'horizontal'
	canvas.before:
		Color:
			rgba: 0.5, 0.5, 0.5, 1
		Rectangle:
			size: self.size
			pos: self.pos
	name: ''
	id: ''
	imagePath: ''
	attendees: ''
	Button:
		text: "Image Placeholder"
		on_release: root.load_event(root.id)
	Label:
		text: root.name
	Label:
		text: root.attendees + " friends are attending."
		

<EventList>:	
	orientation: 'vertical'
	Label:
		text: root.getText()
		markup: True
		size_hint_y: None
		height: dp(50)
		color: 0,0,0,1
		on_ref_press: app.go_screen(2)
	EventRecycle:
		id: rvEvent


<EventRecycle>:
	id: er
	scroll_type: ['bars', 'content']
	scroll_wheel_distance: dp(114)
	bar_width: dp(10)
	viewclass: 'EventRow'
	RecycleBoxLayout:
		default_size: None, dp(56)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'
		spacing: dp(2)

UnifyScreen:
	EventList:
		id: efs
