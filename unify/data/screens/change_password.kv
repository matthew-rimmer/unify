ChangePassword:
	pass_code: pass_code
	prompt: prompt
	new_pass: new_pass
	save: save

	BoxLayout:
		orientation: 'vertical'
		padding: dp(30)

		# Requesting the code sent to the user's email
		Label:
			text: "We have sent a code to the email address you provided. \n \n Please enter the code below:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
		TextInput:
			id: pass_code
			multiline: False
			size_hint_y: None
			height: dp(30)

		GridLayout:
			cols: 1
			spacing: dp(20)
			padding: dp(30)

			RoundedButton:
				text: "Continue"
				size_hint_y: None
				height: dp(30)
				on_release: root.check_code(pass_code.text)


		# This section is hidden from the user until the code they provided is checked & correct
		GridLayout:
			cols: 1
			spacing: dp(20)
			padding: dp(30)

			Label:
				id: prompt
				text: ''
				halign: "center"
				text_size: root.width, None
				color: 0,0,0,1

			TextInput:
				id: new_pass
				password: True
				multiline: False
				size_hint_y: None
				height: dp(0)

			RoundedButton:
				id: save
				text: ''
				size_hint_y: None
				height: dp(0)
				back_color: (192, 192, 192, 0)
				on_release: root.save_password(new_pass.text)
				on_release: app.go_screen(5)





