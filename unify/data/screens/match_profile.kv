MatchProfile:
	img: img
	img2: img2
	img3: img3
	fullname: fullname
	description: description
	tag_grid: tag_grid
	add_match: add_match
	remove_match: remove_match
	report_user: report_user

	ScrollView:
		bar_width: dp(5)

		GridLayout:
			cols: 1
			size_hint_y: None
			height: self.minimum_height
			padding: dp(15)
			spacing: dp(15)


			# Display the user's photos as a carousel
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: None
				height: dp(160)

				Carousel:
					direction: 'right'
					loop: True

					AsyncImage:
						id: img
						source: 'http://placehold.it/480x270.png&text=slide-1.png'


					AsyncImage:
						id: img2
						source: 'http://placehold.it/480x270.png&text=slide-2.png'


					AsyncImage:
						id: img3
						source: 'http://placehold.it/480x270.png&text=slide-3.png'



			# Display the user's name
			# Retrieve from database
			Label:
				id: fullname
				text: ''
				font_size: dp(17)
				bold: True
				color: 0,0,0,1


			# Display the user's 'About Me' message
			# Retrieve from database
			Label:
				id: description
				text: ''
				font_size: dp(15)
				color: 0, 0, 0, 1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None


			# Display the user's interest tags
			# Retrieve from database
			GridLayout:
				id: tag_grid
				cols: 3
				size_hint_x: 1
				size_hint_y: None
				height: dp(60)
				spacing: dp(10)


			# Display the user's Instagram photos
			# Instagram API
			Label:
				text: "Instagram"
				color: 0,0,0,1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None


			# Display the user's Spotify artists
			# Spotify API
			Label:
				text: "Spotify - Favourite Artists"
				color: 0,0,0,1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None


			# Display the user's Twitter
			# Retrieve link from database
			Label:
				text: "Twitter"
				color: 0,0,0,1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None


			# Display the user's LinkedIn url
			# Retrieve link from database
			Label:
				text: root.getText()
				markup: True
				color: 0,0,0,1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None
				on_ref_press: root.urlLink(*args)


			GridLayout:
				cols: 2
				size_hint_x: 1
				size_hint_y: None
				height: dp(25)
				spacing: dp(20)

				# Add a match
				RoundedButton:
					id: add_match
					text: "Add"
					on_release:


				# Reject a match
				RoundedButton:
					id: remove_match
					text: "Pass"
					on_release:

			RoundedButton:
				id: report_user
				text: "Report User"
				size_hint_y: None
				height: dp(25)
				on_release: app.go_screen(9)
