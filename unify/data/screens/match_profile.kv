MatchProfile:
	user_pictures: user_pictures
	fullname: fullname
	description: description
	tag_grid: tag_grid
	instagram: instagram
	twitter: twitter
	spotify: spotify
	linked_in: linked_in
	add_match: add_match
	remove_match: remove_match
	report_user: report_user

	ScrollView:
		bar_width: dp(5)

		GridLayout:
			cols: 1
			size_hint_y: None
			height: self.minimum_height
			padding: dp(15)
			spacing: dp(15)


			# Display the user's photos as a carousel
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: None
				height: dp(160)

				Carousel:
					id: user_pictures
					direction: 'right'
					loop: True


			# Display the user's name
			Label:
				id: fullname
				text: ''
				font_size: dp(17)
				bold: True
				color: 0,0,0,1


			# Display the user's 'About Me' message
			Label:
				id: description
				text: ''
				font_size: dp(15)
				color: 0, 0, 0, 1
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]
				halign: 'center'


			# Display the user's interest tags
			GridLayout:
				id: tag_grid
				cols: 3
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(10)
		
			
			GridLayout:
				cols: 2
				size_hint_y: None
				height: self.minimum_height
				padding: dp(15)
				spacing: dp(10)

				# Display the user's Instagram profile
				Image:
					source: "data/icons/Instagram_Glyph.png"
					size_hint_y: None
					height: dp(35)
				Label:
					id: instagram
					text: ''
					markup: True
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'
					on_ref_press: root.urlLink(*args)


				# Display the user's Twitter profile
				Image:
					source: "data/icons/Twitter_Logo_Blue.png"
					size_hint_y: None
					height: dp(45)
				Label:
					id: twitter
					text: ''
					markup: True
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'
					on_ref_press: root.urlLink(*args)


				# Display the user's Spotify profile
				Image:
					source: "data/icons/Spotify_Icon.png"
					size_hint_y: None
					height: dp(35)
				Label:
					id: spotify
					text: ''
					markup: True
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'
					on_ref_press: root.urlLink(*args)


				# Display the user's LinkedIn profile
				Image:
					source: "data/icons/LinkedIn_Logo.png"
					size_hint_y: None
					height: dp(30)
				Label:
					id: linked_in
					text: ''
					markup: True
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'
					on_ref_press: root.urlLink(*args)


			GridLayout:
				cols: 2
				size_hint_x: 1
				size_hint_y: None
				height: dp(25)
				spacing: dp(20)

				# Add a match
				RoundedButton:
					id: add_match
					text: "Add"
					on_release:


				# Reject a match
				RoundedButton:
					id: remove_match
					text: "Pass"
					on_release:
					
					
			# Report user button
			RoundedButton:
				id: report_user
				text: "Report User"
				size_hint_y: None
				height: dp(25)
				on_release: app.go_screen(9)
