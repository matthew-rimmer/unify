<ReportUser>
        BoxLayout:
                orientation: 'vertical'
                padding: dp(20)
                spacing: dp(10)

                Label:
                        text: "Please select your reason \n for reporting this user:"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1


                # Four choices total
                CheckBox:
                        active: False
                        color: 0,0,0,1
                Label:
                        text: "1) Objectionable content in profile"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1


                CheckBox:
                        active: False
                        color: 0,0,0,1
                Label:
                        text: "2) Bullying and harrassment \n through social media"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1


                CheckBox:
                        active: False
                        color: 0,0,0,1
                Label:
                        text: "3) Fake profile - student does not exist"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1


                Label:
                        text: "4) Other"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1
                TextInput:
                        multiline:True
                        size_hint: (1, None)
                        height: dp(70)


                # Submit report
                RoundedButton:
                        id: report_user
                        text: "Submit"
                        pos_hint: {"center_x": 0.5}
                        size_hint: 0.5, 0.7
                        on_release: app.go_screen(4)

UnifyScreen:
        ReportUser:
