ChangePassword:
	pass_code: pass_code
	prompt: prompt
	new_pass: new_pass
	save: save

	BoxLayout:
		orientation: 'vertical'
		pos_hint: {'center_x': 0.5, 'center_y': 0.5}
		size_hint: 0.8, 0.7

		Label:
			text: "Action Verification"
			color: utils.get_color_from_hex("#0D1012")
			font_size: sp(30)
			size_hint_y: 0.1
			bold: True
			halign: "center"
			spacing: 0

		Label:
			text: ''
			size_hint_y: 0.5

		# Requesting the verification code sent to the user's email
		Label:
			text: "We have sent a code to the email address you provided. \n \n Please enter the code below:"
			size_hint_x: 0.75
			pos_hint: {'center_x': 0.5}
			font_size: sp(20)
			halign: "center"
			text_size: self.size
			color: utils.get_color_from_hex("#0D1012")

		TextInput:
			id: pass_code
			multiline: False
			font_size: sp(25)
			valign: 'middle'
			size_hint_y: 0.4
			color: utils.get_color_from_hex("#0D1012")

		Label:
			text: ''
			size_hint_y: 0.5

		# Verify account button
		RoundedButton:
			text: "Continue"
			font_size: sp(30)
			size_hint_x: 0.75
			size_hint_y: .6
			pos_hint: {"center_x": 0.5}
			on_release: root.check_code(pass_code.text)

		Label:
			id: prompt
			text: "New Password"
			size_hint_x: 0.75
			opacity: 0
			pos_hint: {'center_x': 0.5}
			font_size: sp(20)
			halign: "center"
			text_size: self.size
			color: utils.get_color_from_hex("#0D1012")

		TextInput:
			id: new_pass
			multiline: False
			opacity: 0
			password: True
			font_size: sp(25)
			valign: 'middle'
			size_hint_y: 0.4
			color: utils.get_color_from_hex("#0D1012")

		Label:
			text: ''
			size_hint_y: 0.5

		RoundedButton:
			id: save
			text: "Save New Password"
			opacity: 0
			font_size: sp(30)
			size_hint_x: 0.75
			size_hint_y: .6
			pos_hint: {"center_x": 0.5}
			on_release: root.save_password(new_pass.text)

