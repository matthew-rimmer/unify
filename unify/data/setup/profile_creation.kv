<ProfileCreation>
        BoxLayout:
                orientation: "vertical"
                padding: dp(20)
                spacing: dp(10)

                # Main background colour
                canvas:
                        Color:
                                rgb: utils.get_color_from_hex("#D8BFD8")
                        Rectangle:
                                size: self.size
                                pos: self.pos

                Label:
                        text: "Create Your Profile"
                        font_size: 20
                        bold: True
                        text_size: self.size
                        halign: "left"


                # Upload pictures - save image url
                Label:
                        text: "Choose your photos:"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1


                # Fill in 'About Me' section
                Label:
                        text: "What should be in your 'About Me'?"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1
                TextInput:
                        id: description
                        multiline: True


		# Interest tags
                Label:
                        text: "Tell us your interests (the 1st one should be your course):"
                        halign: "center"
                        text_size: root.width, None
                        color: 0,0,0,1
                TextInput:
                        id: interest_tags
                        multiline: True


                # Link Instagram
                Label:
                        text: "Connect your Instagram:"
                        color: 0,0,0,1


                # Link Spotify
                Label:
                        text: "Connect your Spotify:"
                        color: 0,0,0,1


                # Link Twitter
                Label:
                        text: "Connect your Twitter:"
                        color: 0,0,0,1


                # Provide LinkedIn URL
                Label:
                        text: "LinkedIn URL:"
                        color: 0,0,0,1
                TextInput:
                        id: linked_in
                        multiline: False


                RoundedButton:
                        id: profileCreate
                        text: "Create Profile"
                        pos_hint: {"center_x": 0.5}
                        size_hint: 0.5, 0.8
                        on_release:
                                app.root.current = "main"
                                root.manager.transition.direction = 'left'
