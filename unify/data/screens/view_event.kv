ViewEvent:
	event_img: event_img
	event_name: event_name
	description: description
	datetime: datetime
	location: location
	creator: creator
	attendees: attendees
	attend: attend
	report_event: report_event

	ScrollView:
		BoxLayout:
			orientation: "vertical"
			size_hint_y: None
			height: dp(600)
			padding: dp(8)
			spacing: dp(6)

			# Display the event photo
			AsyncImage:
				id: event_img
				size_hint_y: None
				height: dp(180)


			# Display the event name
			Label:
				id: event_name
				text: ''
				font_size: dp(15)
				bold: True
				color: 0,0,0,1
				size_hint: 0.5, 0.5
				pos_hint: {"center_x": 0.5}


			# Display the event creator's name
			Label:
				id: creator
				text: ''
				font_size: dp(15)
				color: 0,0,0,1
				size_hint: 0.5, 0.5
				pos_hint: {"center_x": 0.5}


			# Display the event's description
			Label:
				id: description
				text: ''
				text_size: root.width, None
				halign: 'center'
				color: 0, 0, 0, 1
				size: self.texture_size
				padding: dp(10), dp(10)


			# Event date & time
			# Event location
			GridLayout:
				cols: 2
				size_hint_y: None
				height: dp(70)
				spacing: dp(10)

				Image:
					# icon made by Freepik from www.flaticon.com
					source: 'data/icons/date_time.png'

				Label:
					id: datetime
					text: ''
					font_size: dp(15)
					color: 0, 0, 0, 1
					text_size: self.width, None
					halign: 'center'

				Image:
					# icon made by DinosoftLabs from www.flaticon.com
					source: 'data/icons/location.png'

				Label:
					id: location
					text: ''
					font_size: dp(15)
					color: 0, 0, 0, 1
					text_size: self.width, None
					halign: 'center'

			GridLayout:
				cols: 1
				padding: dp(25)
				spacing: dp(10)

				RoundedButton:
					id: attendees
					text: "View Attendees"
					size_hint_y: None
					height: dp(30)
					on_release:
						root.show_attendees()

				# Attend button
				RoundedButton:
					id: attend
					text: "Attend"
					size_hint_y: None
					height: dp(30)
					on_release:

				# Report event button
				RoundedButton:
					id: report_event
					text: "Report Event"
					size_hint_y: None
					height: dp(30)
					on_release: app.go_screen(8)