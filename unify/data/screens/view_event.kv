<ViewEvent>
        ScrollView:
                BoxLayout:
                        orientation: "vertical"
                        size_hint_y: None
                        height: dp(450)
                        padding: dp(8)
                        spacing: dp(6)

                        # Display the event photo
                        # Retrieve from database
                        AsyncImage:
                                id: eventimage
                                source: 'http://placehold.it/480x270.png&text=slide-1.png'


                        # Display the event name
                        # Retrieve from database
                        Label:
                                id: eventname
                                text: 'Event Name'
                                font_size: dp(15)
                                bold: True
                                color: 0,0,0,1
                                size_hint: 0.5, 0.5
                                pos_hint: {"center_x": 0.5}


                        # Display the event creator's name
                        # Retrieve from database
                        Label:
                                id: creator
                                text: 'Created by:'
                                font_size: dp(15)
                                color: 0,0,0,1
                                size_hint: 0.5, 0.5
                                pos_hint: {"center_x": 0.5}


                        # Display the event's description
                        # Retrieve from database
                        Label:
                                id: description
                                text: 'Event Description'
                                text_size: root.width, None
                                color: 0, 0, 0, 1
                                size: self.texture_size
                                padding: dp(10), dp(10)


                        # Event date & time
                        # Event location
                        GridLayout:
                                rows: 2
                                spacing: dp(10)
                                size_hint: 1, 1
                                padding: 10

                                OutlinedButton:
                                        id: datetime
                                        halign: 'center'
                                        text: 'Date & Time:'
                                        font_size: dp(12)

                                OutlinedButton:
                                        id: location
                                        halign: 'center'
                                        text: 'Location:'
                                        font_size: dp(12)

                        RoundedButton:
                                id: attend
                                text: "Attend"
                                pos_hint: {"center_x": 0.5}
                                size_hint:  0.4, 0.3
                                on_release:

                        RoundedButton:
                                id: reportevent
                                text: "Report Event"
                                pos_hint: {"center_x": 0.5}
                                size_hint:  0.4, 0.3
                                on_release: app.go_screen(6)

UnifyScreen:
        ViewEvent:
