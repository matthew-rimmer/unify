				Label:
					text: "What should be in your 'About Me'?"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: description
					multiline: True
					size_hint_y: None
					height: dp(40)


				# Interest tags
				Label:
					text: "University course & interests? \n (one per line)"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: tags
					multiline: True
					size_hint_y: None
					height: dp(80)


				# Link Instagram
				Label:
					text: "Instagram Handle:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: instagram
					multiline: False
					size_hint_y: None
					height: dp(30)

				
				# Link Twitter
				Label:
					text: "Twitter Handle:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: spotify
					multiline: False
					size_hint_y: None
					height: dp(30)


				# Link Spotify
				Label:
					text: "Spotify Username:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: twitter
					multiline: False
					size_hint_y: None
					height: dp(30)


				# Provide LinkedIn URL
				Label:
					text: "LinkedIn URL:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: linked_in
					multiline: False
					size_hint_y: None
					height: dp(30)


				RoundedButton:
					text: "Create Profile"
					size_hint_y: None
					height: dp(25)
					on_release: root.save_profile()
					on_release:
						app.root.current = "account_verification"
						root.manager.transition.direction = 'left'

				RoundedButton:
					text: "Cancel"
					size_hint_y: None
					height: dp(25)
					on_release:
						app.root.current = "initial_screen"
						root.manager.transition.direction = 'right'
