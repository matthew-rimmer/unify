#:kivy 1.8
#:import utils kivy.utils


BoxLayout:
        orientation: 'vertical'
        
        # Main background colour
        canvas:
                Color:
                        rgb: utils.get_color_from_hex("#eddff7")
                Rectangle:
                        size: self.size
                        pos: self.pos      
        Label:
                id: "Title"
                text: "Title"
                size_hint: 1, .2
        ScreenManager:
                id: sm
                size_hint: 1, .6
                on_current_screen:
                        idx = app.screen_names.index('match')
        GridLayout:
                cols: 3
                size_hint: 1, .1
                ImageButton:
                        source: "icons/profile_icon.png"
                        on_release: app.go_screen(0)
                ImageButton:
                        source: "icons/find_icon.png"
                        on_release: app.go_screen(1)
                ImageButton:
                        source: "icons/message_icon.png"
                        on_release: app.go_screen(2)
