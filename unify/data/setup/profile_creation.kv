#					text: "Last name:"
#					color: 0,0,0,1
#				TextInput:
#					id: last_name
#					multiline: False
#					size_hint_y: None
#					height: dp(40)


				# Date of birth field
#				Label:
#					text: "Date of Birth \n (YYYY-MM-DD):"
#					halign: 'center'
#					color: 0,0,0,1
#				TextInput:
#					id: dob
#					multiline: False
#					size_hint_y: None
#					height: dp(40)

				# Uni Email field
#				Label:
#					text: "University \n email address:"
#					halign: 'center'
