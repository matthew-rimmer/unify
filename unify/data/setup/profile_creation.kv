<ProfileCreation>:
	filechooser: filechooser
	description: description
	tags: tags
	instagram: instagram
	twitter: twitter
	spotify: spotify
	linked_in: linked_in
	#first_name: first_name
	#last_name: last_name
	#dob: dob
	#uni_email: uni_email
	#password: password
		
	GridLayout:
		cols: 1
		padding: dp(15)
		spacing: dp(15)

		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8BFD8")
			Rectangle:
				size: self.size
				pos: self.pos

		Label:
			text: "Create Your Profile"
			font_size: 20
			bold: True
			text_size: self.size
			halign: "left"
			size_hint_y: None
			height: dp(20)


		# Upload pictures - save image url
		Label:
			text: "Choose your 3 photos:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
			size_hint_y: None
			height: dp(20)

		GridLayout:
			cols: 1
			canvas.before:
				Color:
					rgb: 0.6, 0.5, 0.6
				Rectangle:
					pos: self.pos
					size: self.size

			FileChooserIconView:
				id: filechooser
				size_hint_x: 1
				size_hint_y: None
				height: dp(200)
				multiselect: True
				filters: ["*.png", "*.jpg"]
				on_selection:
					root.select(filechooser.selection)

		ScrollView:
			bar_width: dp(5)

			GridLayout:
				cols: 1
				size_hint_x: 1
				size_hint_y: None
				height: self.minimum_height
				padding: dp(15)
				spacing: dp(15)

