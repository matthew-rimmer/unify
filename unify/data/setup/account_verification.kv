<AccountVerification>:
	verif_code: verif_code

	FloatLayout:
		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#E8E9E6")
			Rectangle:
				size: self.size
				pos: self.pos


		BoxLayout:
			orientation: 'vertical'
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			size_hint: 0.8, 0.5

			Label:
				text: "Verify Your Account"
				color: utils.get_color_from_hex("#0D1012")
				font_size: sp(30)
				size_hint_y: 0.1
				bold: True
				halign: "center"
				spacing: 0

			# Requesting the verification code sent to the user's email
			Label:
				text: "We have sent a verification code to the email address you provided. \n \n Please enter the 6-digit code below:"
				size_hint_x: 0.75
				pos_hint: {'center_x': 0.5}
				font_size: sp(20)
				halign: "center"
				text_size: self.size
				color: utils.get_color_from_hex("#0D1012")

			TextInput:
				id: verif_code
				multiline: False
				font_size: sp(25)
				valign: 'middle'
				size_hint_y: 0.3
				color: utils.get_color_from_hex("#0D1012")

			Label:
				text: ''
				size_hint_y: 0.5

			# Verify account button
			RoundedButton:
				text: "Verify Account"
				font_size: sp(30)
				size_hint_x: 0.6
				size_hint_y: .45
				pos_hint: {"center_x": 0.5}
				on_release: root.verify(verif_code.text)


