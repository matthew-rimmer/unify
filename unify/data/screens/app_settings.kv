AppSettings:
	filechooser: filechooser
	description: description
	tags: tags
	instagram: instagram
	twitter: twitter
	spotify: spotify
	linked_in: linked_in
		
	GridLayout:
		cols: 1
		padding: dp(15)
		spacing: dp(15)

		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#D8BFD8")
			Rectangle:
				size: self.size
				pos: self.pos

		Label:
			text: "Create Your Profile"
			font_size: 20
			bold: True
			text_size: self.size
			halign: "left"
			size_hint_y: None
			height: dp(20)


		# Select photos to be uploaded
		Label:
			text: "Choose your 3 photos:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
			size_hint_y: None
			height: dp(20)

		GridLayout:
			cols: 1
			canvas.before:
				Color:
					rgb: 0.6, 0.5, 0.6
				Rectangle:
					pos: self.pos
					size: self.size

			FileChooserIconView:
				id: filechooser
				size_hint_x: 1
				size_hint_y: None
				height: dp(200)
				multiselect: True
				filters: ["*.png", "*.jpg"]
				on_selection:
					root.select(filechooser.selection)

		ScrollView:
			bar_width: dp(5)

			GridLayout:
				cols: 1
				size_hint_x: 1
				size_hint_y: None
				height: self.minimum_height
				padding: dp(15)
				spacing: dp(15)

				# Fill in 'About Me' section
				Label:
					text: "What should be in your 'About Me'?"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: description
					multiline: True
					size_hint_y: None
					height: dp(80)


				# Interest tags field
				Label:
					text: "University course & interests? \n (one per line)"
					halign: "center"
					text_size: root.width, None
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: tags
					multiline: True
					size_hint_y: None
					height: dp(80)


				# Instagram handle
				Label:
					text: "Instagram Handle:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: instagram
					multiline: False
					size_hint_y: None
					height: dp(30)

				
				# Twitter handle
				Label:
					text: "Twitter Handle:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: spotify
					multiline: False
					size_hint_y: None
					height: dp(30)


				# Spotify username
				Label:
					text: "Spotify Username:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: twitter
					multiline: False
					size_hint_y: None
					height: dp(30)


				# LinkedIn public profile url
				Label:
					text: "LinkedIn URL:"
					color: 0,0,0,1
					size_hint_y: None
					height: dp(20)
				TextInput:
					id: linked_in
					multiline: False
					size_hint_y: None
					height: dp(30)


				# Submit new data
				RoundedButton:
					text: "Update Profile"
					size_hint_y: None
					height: dp(25)
					on_release: root.change_profile()

				# Change password button
				RoundedButton:
					text: "Change Password"
					size_hint_y: None
					height: dp(25)
					on_release: app.go_screen(1)

				# Log out button
				RoundedButton:
					text: "Log Out"
					size_hint_y: None
					height: dp(25)
					on_release: root.log_out()
