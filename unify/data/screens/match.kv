<MatchRow>:
	orientation: 'horizontal'
	canvas.before:
		Color:
			rgba: 0.5, 0.5, 0.5, 1
		Rectangle:
			size: self.size
			pos: self.pos
	id: ''
	picture: ''
	value: ''
	name: 'a'
	tags: 'a'
	
	AsyncImage:
		source: root.picture
	Label:
		text: root.name
		text_size: self.size
		halign: 'center'
		valign: 'center'
	Label:
		text: root.tags
		text_size: self.size
		halign: 'center'	
		valign: 'center'

		

<MatchList>:	
	orientation: 'vertical'
	id: nice
	MatchRecycle:
		id: rv


<MatchRecycle>:
	scroll_type: ['bars', 'content']
	scroll_wheel_distance: dp(114)
	bar_width: dp(10)
	viewclass: 'MatchRow'
	RecycleBoxLayout:
		default_size: None, dp(56)
		default_size_hint: 1, None
		size_hint_y: None
		height: self.minimum_height
		orientation: 'vertical'
		spacing: dp(2)

UnifyScreen:
	MatchList:
		id: anice
