#:kivy 1.8

#:import utils kivy.utils
#:include data/setup/initial.kv
#:include data/setup/login.kv
#:include data/setup/register.kv
#:include data/setup/profile_creation.kv

ScreenManager:
	Initial:
		name: "initial_screen"
		id: initial_screen

	Login:
		name: "login_screen"
		id: login_screen

	Register:
		name: "register_screen"
		id: register_screen


	ProfileCreation:
		name: "profile_creation"
		id: profile_creation


	MainSections:
		name: "main"
		id: main

<MainSections>
	BoxLayout:
		orientation: 'vertical'

		# Main background colour
		canvas:
			Color:
				rgb: utils.get_color_from_hex("#eddff7")
			Rectangle:
				size: self.size
				pos: self.pos

		Label:
			id: title
			text: ''
			size_hint: 1, .2
			font_size: dp(17)
			color: 95,158,160,1

		ScreenManager:
			id: sm
			size_hint: 1, .6
			on_current_screen:
				idx = app.screen_names.index('match')

		GridLayout:
			cols: 3
			size_hint: 1, .05
			ImageButton:
				# icon made by Smashicons from www.flaticon.com
				source: "data/icons/profile_icon.png"
				on_release: app.go_screen(6)
			ImageButton:
				# icon made by Freepik from www.flaticon.com
				source: "data/icons/find_icon.png"
				on_release: app.go_screen(4)
			ImageButton:
				# icon made by iconixar from www.flaticon.com
				source: "data/icons/events_icon.png"
				on_release: app.go_screen(2)


# Code for RoundedButton & OutlinedButton adapted from Youtuber 'Samuel Courses'
# Available at https://www.youtube.com/watch?v=Xv57jB_Xvqo

<RoundedButton>
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (192, 192, 192, 0.3)
	border_radius: [11]
	color: (0,0,0,1)

	canvas.before:
		Color:
			rgba: self.back_color
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: self.border_radius

<OutlinedButton@Button>
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (0, 0, 128, 0.2)
	border_radius: 5
	color: (0,0,0,1)

	canvas.before:
		Color:
			rgba: self.back_color
		Line:                                # pos x, pos y, width, height, radius
			rounded_rectangle: (self.pos[0], self.pos[1], self.size[0], self.size[1], self.border_radius)
			width: 0.9
