ViewEvent:
	event_img: event_img
	event_name: event_name
	creator: creator
	description: description
	datetime: datetime
	location: location
	creator: creator
	attendees: attendees
	attend: attend
	report_event: report_event

	ScrollView:
		bar_width: dp(5)

		GridLayout:
			cols: 1
			size_hint_y: None
			height: self.minimum_height
			padding: dp(10)
			spacing: dp(25)


			# Display the event photo
			AsyncImage:
				id: event_img
				size_hint_y: None
				height: dp(160)


			# Display the event name
			Label:
				id: event_name
				text: ''
				font_size: dp(15)
				bold: True
				color: 0,0,0,1
				halign: 'center'
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]


			# Display the event creator's name
			Label:
				id: creator
				text: ''
				font_size: dp(15)
				color: 0,0,0,1
				halign: 'center'
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]


			# Display the event's description
			Label:
				id: description
				text: ''
				color: 0, 0, 0, 1
				halign: 'center'
				size_hint_y: None
				text_size: self.width, None
				height: self.texture_size[1]


			# Event date & time
			# Event location
			GridLayout:
				cols: 2
				size_hint_y: None
				height: self.minimum_height
				padding: dp(10)
				spacing: dp(20)

				Image:
					# icon made by Freepik from www.flaticon.com
					source: 'data/icons/date_time.png'
					size_hint_y: None
					height: dp(35)

				Label:
					id: datetime
					text: ''
					font_size: dp(15)
					color: 0, 0, 0, 1
					halign: 'center'
					size_hint_y: None
					text_size: self.width, None
					height: self.texture_size[1]

				Image:
					# icon made by DinosoftLabs from www.flaticon.com
					source: 'data/icons/location.png'
					size_hint_y: None
					height: dp(35)

				Label:
					id: location
					text: ''
					font_size: dp(15)
					color: 0, 0, 0, 1
					halign: 'center'
					size_hint_y: None
					text_size: self.width, None
					height: self.texture_size[1]

			GridLayout:
				cols: 1
				size_hint_y: None
				height: self.minimum_height
				padding: dp(20)
				spacing: dp(10)

				RoundedButton:
					id: attendees
					text: "View Attendees"
					size_hint_y: None
					height: dp(30)
					on_release:
						root.show_attendees()

				# Attend button
				RoundedButton:
					id: attend
					text: "Attend"
					size_hint_y: None
					height: dp(30)

				# Report event button
				RoundedButton:
					id: report_event
					text: "Report Event"
					size_hint_y: None
					height: dp(30)
					on_release: app.go_screen(8)