Profile:
	fullname: fullname
	description: description
	tag_grid: tag_grid
	user_pictures: user_pictures
	instagram: instagram
	twitter: twitter
	spotify: spotify

	ScrollView:
		bar_width: dp(5)

		GridLayout:
			cols: 1
			size_hint_y: None
			height: self.minimum_height
			padding: dp(15)
			spacing: dp(15)


			# Display the user's photos as a carousel
			BoxLayout:
				orientation: 'vertical'
				size_hint_y: None
				height: dp(180)

				Carousel:
					id: user_pictures 
					direction: 'right'
					loop: True
						
			# Display the user's name
			# Retrieve from database
			Label:
				id: fullname
				text: ''
				font_size: dp(17)
				bold: True
				color: 0,0,0,1


			# Display the user's 'About Me' message
			# Retrieve from database
			Label:
				id: description
				text: ''   
				font_size: dp(15)
				color: 0, 0, 0, 1
				size_hint_x: 1
				size_hint_y: None
				text_size: self.width, None


			# Display the user's interest tags
			# Retrieve from database
			GridLayout:
				id: tag_grid
				cols: 3
				size_hint_y: None
				height: self.minimum_height
				spacing: dp(10)


			GridLayout:
				cols: 2
				size_hint_y: None
				height: self.minimum_height
				padding: dp(15)
				spacing: dp(10)

				# Display the user's Instagram handle
				Image:
					source: "data/icons/Instagram_Glyph.png"
					size_hint_y: None
					height: dp(35)
					#allow_stretch: True
					keep_ratio: True
				Label:
					id: instagram
					text: "Not Provided"
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'


				# Display the user's Twitter handle
				Image:
					source: "data/icons/Twitter_Logo_Blue.png"
					size_hint_y: None
					height: dp(45)
				Label:
					id: twitter
					text: "Not Provided"
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'


				# Display the user's Spotify username
				Image:
					source: "data/icons/Spotify_Icon.png"
					size_hint_y: None
					height: dp(35)
				Label:
					id: spotify
					text: "Not Provided"
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'


				# Display the user's LinkedIn url
				# Retrieve link from database
				Image:
					source: "data/icons/LinkedIn_Logo.png"
					size_hint_y: None
					height: dp(30)
				Label:
					text: root.getText()
					markup: True
					color: 0,0,0,1
					size_hint_x: 1
					size_hint_y: None
					height: dp(40)
					text_size: self.width, None
					halign: 'center'
					on_ref_press: root.urlLink(*args)


			GridLayout:
				cols: 2
				size_hint_x: 1
				size_hint_y: None
				height: dp(25)
				spacing: dp(20)

				# Access the friends list
				RoundedButton:
					text: "My Friends"
					on_release: app.go_screen(4)


				# Access the settings
				RoundedButton:
					text: "Settings"
					on_release: app.go_screen(0)

