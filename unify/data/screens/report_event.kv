ReportEvent:
	reason1: reason1
	reason2: reason2
	reason3: reason3
	reason4: reason4
	report_event: report_event

	BoxLayout:
		orientation: 'vertical'
		padding: dp(20)
		spacing: dp(10)

		Label:
			text: "Please select your reason \n for reporting this event:"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
			pos_hint: {"top": 0.9}


		# Four choices total
		CheckBox:
			id: reason1
			active: False
			color: 0,0,0,1
		Label:
			text: "1) Objectionable content on the event's page"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		CheckBox:
			id: reason2
			active: False
			color: 0,0,0,1
		Label:
			text: "2) Fears over the safety of the event"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		CheckBox:
			id: reason3
			active: False
			color: 0,0,0,1
		Label:
			text: "3) Fraud and deception"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1


		Label:
			text: "4) Other"
			halign: "center"
			text_size: root.width, None
			color: 0,0,0,1
		TextInput:
			id: reason4
			multiline:True
			size_hint: (1, None)
			height: dp(70)


		# Submit report
		RoundedButton:
			id: report_event
			text: "Submit"
			pos_hint: {"center_x": 0.5}
			size_hint: 0.5, 0.6
			on_release: root.save_event_report()
			on_release: app.go_screen(4)